@{
    ViewBag.Title = "Лекъри";
}
<div class="container" ng-controller="doctorsController">
    <div>
        <div class="col-xs-2">
            <button class="btn btn-default" ng-click="add()">Добави нов лекар</button>
        </div>
        <div class="col-xs-3 col-xs-offset-7">
            <div class="input-group">
                <input type="search" ng-model="searchText" class="form-control" />
                <span class="input-group-addon glyphicon glyphicon-search" style="top: 0"></span>
            </div>
        </div>
    </div>
    <table class="table table-hover table-nomen">
        <thead>
            <tr>
                <th style="width: 10px"></th>
                <th style="width: 100px; text-align: center">Титла</th>
                <th style="width: 100px; text-align: center">Име</th>
                <th style="width: 100px; text-align: center">Фамилия</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="doctor in doctors | filter:searchText">
                <td class="controls">
                    <a ng-href="/Common/Schedule?doctorId={{doctor.id}}">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </a>
                    <a ng-click="edit(doctor.id)"><span class="glyphicon glyphicon-pencil"></span></a>
                </td>
                <td ng-bind="doctor.title"></td>
                <td ng-bind="doctor.firstName"></td>
                <td ng-bind="doctor.lastName"></td>
            </tr>
        </tbody>
    </table>
</div>

@section Styles
{
    <link href="~/static/css/doctor.min.css" rel="stylesheet" />
}

@section Scripts
{
    <script src="~/static/js/common/doctor.js" type="text/javascript"></script>
}
