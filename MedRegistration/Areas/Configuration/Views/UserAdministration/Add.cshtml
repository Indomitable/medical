<div class="modal-form">
    <div ng-controller="userEditController">
        @Html.AntiForgeryToken()
        <div class="alert alert-danger" ng-show="model.errors.length > 0">
            <div ng-repeat="error in model.errors" ng-bind="error"></div>
        </div>
        <div class="panel-group" id="accordion">
            <!-- Main -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                            Потребител
                        </a>
                    </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in">
                    <div class="panel-body">
                        <div class="form-group">
                            <input type="text" id="userName" class="hide" />
                            <label for="realUserName" class="control-label">Потребителско Име:</label>
                            <input type="text" class="form-control" id="realUserName" ng-model="model.userName" ng-readonly="model.id > 0" placeholder="Потребителско Име" required autocomplete="off">
                        </div>
                        <div ng-show="model.id > 0" style="text-align: center">
                            <button type="button" class="btn btn-default" ng-model="model.changePassword"
                                    data-btn-checkbox data-btn-checkbox-true="1" data-btn-checkbox-false="0">
                                Смени паролата
                            </button>
                        </div>
                        <div ng-show="model.id === 0 || model.changePassword === 1">
                            <div class="form-group">
                                <input type="password" id="password" class="hide" />
                                <label for="realPassword" class="control-label">Парола:</label>
                                <input type="password" class="form-control" id="realPassword" ng-model="model.password" placeholder="Парола" required autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label for="confirmPassword" class="control-label">Повтори Паролата:</label>
                                <input type="password" class="form-control" id="confirmPassword" ng-model="model.confirmPassword" placeholder="Повтори парола" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputName" class="control-label">Име</label>
                            <input type="text" class="form-control" id="inputName" ng-model="model.firstName" placeholder="Име" required>
                        </div>
                        <div class="form-group">
                            <label for="inputFamily" class="control-label">Фамилия</label>
                            <input type="text" class="form-control" id="inputFamily" ng-model="model.lastName" placeholder="Фамилия" required>
                        </div>
                        <div class="form-group">
                            <label for="email" class="control-label">Ел. Поща:</label>
                            <input type="email" class="form-control" id="email" ng-model="model.email" placeholder="Електронна поща" required>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Roles -->

            <div class="panel panel-default @ViewBag.AdminViewClass">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo">
                            Права
                        </a>
                    </h4>
                </div>
                <div id="collapseTwo" class="panel-collapse collapse">
                    <div class="panel-body">
                        <div class="multiselect">
                            <ul>
                                <li ng-repeat="r in data.roles">
                                    <input type="checkbox" id="{{ 'checkbox' +  r.id }}" ng-model="r.checked" />
                                    <label for="{{ 'checkbox' +  r.id }}" ng-bind="r.name"></label>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="margin-top: 5px; overflow: hidden">
            <button type="submit" class="btn btn-default" style="float: left; width: 100px" ng-click="save()">Запис</button>
            <button type="button" class="btn btn-default" style="float: left; width: 100px; margin-left: 10px;" ng-click="cancel()" ng-show="cancel">Отказ</button>
            <button type="button" class="btn btn-default  @ViewBag.AdminViewClass" style="float: right; width: 100px" ng-click="delete()" ng-show="canBeDeleted">Изтрий</button>
        </div>
    </div>
</div>
